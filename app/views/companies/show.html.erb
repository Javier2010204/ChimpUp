<div class="row center-xs top-space">
	<div class="col-xs-12 col-sm-8 col-lg-10">
		<div class="box white">
			<div class="card big-padding text-left cover relative" style="background-image: url(<%= @company.cover.url(:medium)%>)">
				<div class="row center-xs">
					<div class="col-xs-6 col-sm-5 no-padding">
						<div class="box">
							<div class="image-container">
								<%=image_tag @company.logo.url(:thumb)%>
							</div>
						</div>
					</div>
					<div class="col-xs col-sm-1">

					</div>
					<div class="col-xs-5 col-sm-6">
						<div class="box text-justify">
                            <h1 class="big-font"><%= @company.name%></h1>
							<p><%= @company.bio %></p>
							<p>
								Tel.
								<span><%=@company.phone%></span>
							</p>
                            <p>
								Direcci√≥n.
								<span><%=@company.address%></span>
							</p>
                            <% if current_user.nil? || @company != current_user.company %>
                                <%= link_to 'Contactar', root_path(), class: 'btn btn-primary'%>
                            <% else %>
                                <%= link_to 'Editar Perfil', edit_company_path(@company), class: 'btn btn-primary'%>
                            <% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row center-xs top-space">
	<div class="col-xs-12 col-sm-8 col-lg-10">
		<div class="box top-space">
			<h2 class="big-font pacifico-font">Productos</h2>
			<div class="row top-space">
				<% @products.each do |product|%>
					<div class="col-xs-12 col-sm-4">
						<div class="box">
                            <div class="card top-space">
                                <%= image_tag product.avatar.url(:medium), class: 'card-img-top'%>
                                <div class="card-body">
                                    <h4 class="card-title"><%= product.name.truncate(17) %></h4>
                                    <h5 class="card-title">Q. <%= product.sale_price %></h5>
                                    <p class="card-text"><%= product.description.truncate(50) %></p>
                                </div>
                                <div class="card-actions">
                                    <%= link_to 'Ver Producto', product, class: 'btn btn-outline-primary'%>
                                </div>
                            </div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
