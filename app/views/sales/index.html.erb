<div class="row center-xs">
    <div class="col-xs-12 col-sm-10 col-lg-8">
        <div class="box">
            <div class="card">
                <div class="card-header d-flex pr-0">
                    <h5 class="card-title mb-0">Mis productos</h5>
                </div>
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Numero</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Usuario</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="text-justify">
                            <%contador = 0%>
                            <% @sales.each do |product|%>
                            <% contador = contador+1%>
                            <tr>
                                <th scope="row"><%= contador %></th>
                                <td><%= link_to sale.number, product%></td>
                                <td><%= sale.date %></td>
                                <td><%= sale.user %></td>
                            </tr>
                            <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="btn-floating">
  <%= button_to new_sale_url(), method: :get, class: "btn btn-float btn-primary my-1" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>
